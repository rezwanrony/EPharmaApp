<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <RelativeLayout
         android:background="@drawable/border_squer"
         android:layout_width="match_parent"
         android:layout_height="100dp">


         <LinearLayout
             android:layout_marginTop="3dp"
             android:layout_alignParentTop="true"
             android:layout_alignParentRight="true"
             android:orientation="horizontal"
             android:layout_width="wrap_content"
             android:layout_height="35dp">
             <Button
                 android:layout_marginRight="3dp"
                 android:id="@+id/btn_editmedicinecartone"
                 android:layout_width="45dp"
                 android:layout_height="25dp"
                 android:layout_gravity="end"
                 android:layout_marginTop="0dp"
                 android:background="@drawable/pencil" />

             <Button
                 android:id="@+id/btn_close_popup"
                 android:layout_width="25dp"
                 android:layout_height="25dp"
                 android:layout_gravity="end"
                 android:layout_marginTop="0dp"
                 android:background="@drawable/closeback" />
         </LinearLayout>
         <LinearLayout
             android:layout_margin="10dp"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/lltitle"
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="15sp"
            android:text="Napa Extra"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/tv_medicinenamepopup"
            android:layout_width="180dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="12sp"
            android:text="Square Pharmacutical LTD."
            android:id="@+id/tv_medicinecompany"
            android:layout_width="180dp"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:weightSum="10"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_marginTop="10dp"
                android:textAllCaps="false"
                android:background="@drawable/capsule_yellow_button"
                android:textSize="12sp"
                android:text="70 pcs X 2 BDT"
                android:layout_width="120dp"
                android:layout_height="20dp" />

            <Button
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"
                android:background="@drawable/capsule_yellow_button"
                android:textSize="12sp"
                android:text="140.00 BDT"
                android:layout_width="120dp"
                android:layout_height="20dp" />
        </RelativeLayout>
    </LinearLayout>

     </LinearLayout>
     </RelativeLayout>
</LinearLayout>
