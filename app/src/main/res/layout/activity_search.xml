<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.appersden.epharma.SearchActivity">

    <RelativeLayout
        android:background="#F5FBFE"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:alpha="0.4"
            android:scaleType="fitXY"
            android:src="@drawable/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/llsearch"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.appersden.epharma.MedicineListActivity">


        <ImageView
            android:layout_marginBottom="20dp"
            android:layout_marginTop="90dp"
            android:layout_gravity="center"
            android:src="@drawable/epharmalogo"
            android:layout_width="250dp"
            android:layout_height="80dp" />
        <RelativeLayout
            android:background="@drawable/capsule_button_shape"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp">



            <SearchView
                android:iconifiedByDefault="false"
                android:clickable="true"
                android:background="@null"
                android:id="@+id/et_searchmedicine"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:queryHint="Search medicines..."
                android:closeIcon="@drawable/close"
                android:layout_gravity="center"
                android:singleLine="true" />


        </RelativeLayout>

    </LinearLayout>

        <LinearLayout
            android:weightSum="15"
            android:layout_alignParentBottom="true"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <ImageView
                android:layout_weight="5"
                android:id="@+id/img_homesearch"
                android:layout_gravity="center"
                android:src="@drawable/homepage"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <ImageView
                android:layout_weight="5"
                android:id="@+id/img_cartsearch"
                android:layout_gravity="center"
                android:src="@drawable/cart"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <ImageView
                android:layout_weight="5"
                android:id="@+id/img_profilesearch"
                android:layout_gravity="center"
                android:src="@drawable/profile"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </LinearLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
