<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_margin="15dp"
        android:paddingBottom="80dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="2dp"
            android:id="@+id/rlllone"
            android:background="@drawable/border_squer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="35dp">
                <Button
                    android:id="@+id/btn_editmedicinecartone"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/pencil" />

                <Button
                    android:id="@+id/btn_close_popupcart"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/closeback" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lllll"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/lltitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <TextView
                        android:id="@+id/tv_medicinenamepopup"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="Napa Extra"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_medicinecompany"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="Square Pharmacutical LTD."
                        android:textSize="12sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <Button
                            android:layout_width="120dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/capsule_yellow_button"
                            android:text="70 pcs X 2 BDT"
                            android:textAllCaps="false"
                            android:textSize="12sp" />

                        <Button
                            android:layout_width="120dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/capsule_yellow_button"
                            android:text="140.00 BDT"
                            android:textAllCaps="false"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/expanded"
                android:layout_below="@+id/lllll"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/lltitle"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:textSize="14sp"
                        android:text="Power"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">




                            <LinearLayout
                                android:paddingRight="-10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <Spinner
                                    android:clickable="true"
                                    android:backgroundTint="@color/black"
                                    android:id="@+id/spinnerunit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                </Spinner>
                            </LinearLayout>
                        </RelativeLayout>

                        <TextView
                            android:gravity="end"
                            android:textSize="14sp"
                            android:text="mg"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />



                    </LinearLayout>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:textSize="14sp"
                        android:text="Unit"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">



                        <TextView
                            android:textSize="14sp"
                            android:text="70 pcs"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:textSize="14sp"
                        android:text="Price"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <TextView
                            android:gravity="end"
                            android:textSize="14sp"
                            android:text="2.00 BDT"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />



                    </LinearLayout>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:textSize="14sp"
                        android:text="Qty"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <TextView
                            android:gravity="end"
                            android:textSize="14sp"
                            android:text="70.00 pcs"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />



                    </LinearLayout>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:textSize="14dp"
                        android:text="Discount"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <TextView
                            android:gravity="end"
                            android:textSize="14dp"
                            android:text="0.00 BDT"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />



                    </LinearLayout>


                </RelativeLayout>

                <View
                    android:background="@color/black"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <TextView
                            android:gravity="end"
                            android:textSize="14sp"
                            android:text="140.00 BDT"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />



                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:scaleType="fitXY"
                        android:background="@drawable/napaextra"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />




                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:padding="2dp"
            android:id="@+id/rllltwo"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_squer"
            android:layout_width="match_parent"
            android:layout_height="100dp">


            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="35dp">
                <Button
                    android:id="@+id/btn_editmedicinecartones"
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/pencil" />

                <Button
                    android:id="@+id/btn_close_popups"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/closeback" />
            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/lltitles"
                    android:weightSum="10"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="15sp"
                        android:text="Paracetamol"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:id="@+id/tv_medicinenamepopupscart"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="12sp"
                        android:text="Square Pharmacutical LTD."
                        android:id="@+id/tv_medicinecompanys"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:weightSum="10"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_marginTop="10dp"
                            android:textAllCaps="false"
                            android:background="@drawable/capsule_yellow_button"
                            android:textSize="12sp"
                            android:text="50 pcs X 2 BDT"
                            android:layout_width="120dp"
                            android:layout_height="20dp" />

                        <Button
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="10dp"
                            android:textAllCaps="false"
                            android:background="@drawable/capsule_yellow_button"
                            android:textSize="12sp"
                            android:text="100.00 BDT"
                            android:layout_width="120dp"
                            android:layout_height="20dp" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

    <View
        android:background="@color/black"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

        <LinearLayout
            android:id="@+id/expandchild"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:text="Total"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="end" />

            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



                <TextView
                    android:textSize="14sp"
                    android:text="280.00 BDT"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>


        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:text="Ov. Discount"
                android:textAlignment="textEnd"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="end" />

            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



                <TextView
                    android:textSize="14sp"
                    android:text="-80.00 BDT"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>



        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:text="Delivery Charge"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="end" />

            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



                <TextView
                    android:textSize="14sp"
                    android:text="50.00 BDT"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:text="Grand Total"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="end" />

            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



                <TextView
                    android:textSize="14sp"
                    android:text="250.00 BDT"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>


        </RelativeLayout>

        <Button
            android:id="@+id/btn_ordernowcartone"
            android:layout_marginTop="50dp"
            android:layout_gravity="end"
            android:textAllCaps="false"
            android:background="@drawable/capsulebuttonblack"
            android:gravity="center"
            android:textSize="12sp"
            android:text="Order now"
            android:textColor="@color/black"
            android:layout_width="100dp"
            android:layout_height="40dp" />

        </LinearLayout>
    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:background="@drawable/border_squer"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:weightSum="15">


        <RelativeLayout
            android:gravity="center"
            android:layout_weight="5"
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp">
            <ImageView
                android:id="@+id/img_cartsearch"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/cart" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_homesearch"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:src="@drawable/homepage" />

        <ImageView
            android:id="@+id/img_profilesearch"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:src="@drawable/profile" />
    </LinearLayout>
</RelativeLayout>